<div class="panel panel-default">
	<div class="panel panel-heading">
		<h1>Sign up</h1>
	</div>

	<div class="panel panel-body">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="form form-group">
		    <%= f.label :name %>
		    <%= f.text_field :name, autofocus: true, class: "form form-control" %>
		  </div>

		  <div class="form form-group">
		    <%= f.label :username %>
		    <%= f.text_field :username, class: "form form-control" %>
		  </div>

		  <div class="form form-group">
		  	<%= f.label :email %>
		  	<%= f.email_field :email, class: "form form-control" %>
		  </div>

		  <div class="form form-group">
		  	<%= f.label :password %>
		  	<%= f.password_field :password, class: "form form-control" %>
		  </div>

		  <div class="form form-group">
		  	<%= f.label :password_confirmation %>
		  	<%= f.password_field :password_confirmation, class: "form form-control" %>
		  </div>

		  <div class="form form-group">
		  	<%= f.submit "Sign up", class: "btn btn-primary"%>
		  </div>
		<% end %>
	</div>
	<div class="panel panel-footer">
		<%= render "devise/shared/links" %>
	</div>
</div>
